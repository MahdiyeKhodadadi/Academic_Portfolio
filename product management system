class skinCareProdoct():
    def __init__ (self,type,volume,expirationDate,price,moreInformation):
        self.type=type
        self.volume=volume
        self.expirationDate=expirationDate
        self.price=price
        self.moreInformation=moreInformation

    def __str__ (self):
     return (f"type:{self.type}\n volume:{self.volume}\n  expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n")
    
    
class facialCareProducts(skinCareProdoct):
    def __init__ (self,type,volume,expirationDate,price,moreInformation,testerVolume):
        super().__init__(type,volume,expirationDate,price,moreInformation)
        self.testerVolume=testerVolume
    def __str__ (self):
        return (f"type:{self.type}\n volume:{self.volume}\n  expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n testerVolume:{self.testerVolume}")
        

    

class lipBalm(facialCareProducts):
    def __init__ (self,type,volume,expirationDate,price,moreInformation,testerVolume,color):
        super().__init__(type,volume,expirationDate,price,moreInformation,testerVolume)
        self.color=color
    def __str__ (self):
     return (f"type:{self.type}\n volume:{self.volume}\n expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n testerVolume:{self.testerVolume}\n color:{self.color}\n ")


class sunscreen(facialCareProducts):
    def __init__ (self,testerVolume,color):
        super().__init__(testerVolume,color)
        self.color=color
    def __str__ (self):
        return (f"type:{self.type}\n volume:{self.volume}\n  expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n color:{self.color}")     
        

class moisturizingLotion(facialCareProducts):
    def __init__ (self,type,volume,expirationDate,price,moreInformation,texture, packaging):
        super().__init__(type,volume,expirationDate,price,moreInformation)
        self.texture=texture
        self.packaging=packaging
    def __str__ (self):
        return (f"type:{self.type}\n volume:{self.volume}\n  expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n texture:{self.texture}\n packaging:{self.packaging}")


class eyeCream(facialCareProducts):   
    pass



class facialCleanser (skinCareProdoct):
    def __init__ (self,type,volume,expirationDate,price,moreInformation,testerVolume):
        super().__init__ (type,volume,expirationDate,price,moreInformation)
        self.testerVolume=testerVolume
    def __str__ (self):
        return (f"type:{self.type}\n volume:{self.volume}\n  expirationDate:{self.expirationDate}\n price:{self.price}\n moreInformation:{self.moreInformation}\n testerVolume:{self.testerVolume}")
    


class scrub(facialCleanser):
    pass
class toner(facialCleanser):
    pass


class Purchase():
    def __init__(self,postalCode,address):
        self.postalCode=postalCode
        self.address=address
    def __str__ (self):
        return (f"address:{self.address}\n   postalCode:{str(self.postalCode)}")
    
class user():
    def __init__(self,name,family,phone,password):
        self.name=name
        self.family=family
        self.phone=phone
        self.password=password
    def __str__ (self):
        return (f"name : {self.name}\n  family :{ self.family}\n  phone : {str(self.phone)}\n  passw :{ str(self.password)}")
    def _login(self):
        print("Enter password")
    def _signin(self):
        print("Enter name , family ,password")
    def selectProduct(self):
        print("choose product")
    def removeProduct(self):
        print("remove product")
    def changePassword(self):
        print("Enter new password")
    def showProfile(self):
        print("show name , family ...")



class app():
    def showProducts(self):
        print("show products")
    def registerComment(self):
        print("you can register comments")
    def _getInfoLogin(self):
        print("Enter your password to login")
    def _getInfoSignIn(self):
        print("Enter your password to signin")
    
    
    #################################################


